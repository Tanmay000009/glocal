{
    "env": {
      "es2021": true,
      "node": true
    },
    "extends": ["airbnb-base", "prettier"],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module",
      "ecmaFeatures": {
        "modules": true
      }
    },
    "plugins": ["@typescript-eslint", "prettier"],
    "settings": {
      "import/extensions": [".js", ".jsx", ".ts", ".tsx"],
      "import/parsers": {
        "@typescript-eslint/parser": [".ts", ".tsx"]
      },
      "import/resolver": {
        "node": {
          "extensions": [".js", ".jsx", ".ts", ".tsx"]
        }
      }
    },
    "rules": {
      "no-underscore-dangle": "off",
      "import/prefer-default-export": 0,
      "prettier/prettier": [
        1,
        {
          "endOfLine": "lf",
          "tabWidth": 2,
          "semi": true,
          "singleQuote": false,
          "trailingComma": "es5"
        }
      ],
      "no-console": 0,
      "import/extensions": [
        "error",
        "ignorePackages",
        {
          "js": "never",
          "jsx": "never",
          "ts": "never",
          "tsx": "never"
        }
      ]
    }
  }
  